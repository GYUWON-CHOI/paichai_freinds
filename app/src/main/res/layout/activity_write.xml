<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99CCFF"
    tools:context=".WriteActivity">

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left|center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_write"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/coner"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="left|center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_person"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/coner"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center" />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/who"
            android:text="방장"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/input_who"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/coner"
            android:text="E-MAIL"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="left|center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="내용"
            android:textSize="20dp"
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColor="#000000"
            android:id="@+id/input_detail"
            android:layout_width="match_parent"
            android:layout_height="378dp"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@drawable/coner"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_coner"
            android:text="등록"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_coner_2"
            android:text="취소"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
