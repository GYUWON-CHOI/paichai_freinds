<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity"
    android:orientation="vertical"
    android:background="#99CCFF">


  <LinearLayout
      android:gravity="left|center"
      android:layout_margin="10dp"
      android:layout_width="379dp"
      android:layout_height="wrap_content">
    <TextView
        android:textColor="#000000"
        android:text="제목"
        android:textSize="20dp"
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TITLE"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/detail_write"
        android:background="@drawable/coner"
        android:gravity="center"/>
  </LinearLayout>

  <LinearLayout
      android:gravity="left|center"
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_person"
        android:text="인원"
        android:textSize="20dp"/>

    <TextView
        android:text="명"
        android:textColor="#000000"
        android:id="@+id/detail_input_person"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/coner"/>
    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_who"
        android:text="방장"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/detail_input_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="E-MAIL"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/coner"/>
  </LinearLayout>

  <LinearLayout
      android:gravity="left|center"
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:textColor="#000000"
        android:text="내용"
        android:textSize="20dp"
        android:id="@+id/detail_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="DETAIL"
        android:textColor="#000000"
        android:id="@+id/detail_input_detail"
        android:layout_width="match_parent"
        android:layout_height="378dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:background="@drawable/coner"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="30dp">
    <ToggleButton
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="참가 취소"
        android:textOff="참가"
        android:checked="false"
        android:background="@drawable/toggle_selector"/>

    <!-- 추가: 수정, 삭제 버튼 -->

    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제" />

  </LinearLayout>

</LinearLayout>